{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./build",
    "sourceMap": true,
    "removeComments": false,
    "target": "es5",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "baseUrl": ".",
    "paths": {
      "modules/*": [
        "src/modules/*"
      ],
      "components/*": [
        "src/components/*"
      ],
      "locales/*": [
        "src/locales/*"
      ],
      "services/*": [
        "src/services/*"
      ],
      "utils/*": [
        "src/utils/*"
      ]
    },
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src/**/*"]
}
